<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person1" class="com.mycatgib.springstudy.di.basic.Person"
          p:name="이도경"
          p:age="22"
          p:address="부산시 사하구"
          scope="singleton">
<!--        scope default : singleton-->
    </bean>

    <bean id="person1" class="com.mycatgib.springstudy.di.basic.Person" scope="singleton">
        <property name="name" value="김가영"></property>
        <property name="age" value="23"></property>
        <property name="address" value="부산시 수영구 민락동"></property>
    </bean>
</beans>